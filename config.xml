<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>X-O Game</name>

    <description>
        Simple tic tac toe game 
    </description>
    <icon src="assets/icon.png" />
    <preference name="splash-screen-duration" value="3000"/>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
<platform name="android">

    <splash src="assets/screen-hdpi-portrait.png" density="port-hdpi"/>
    <splash src="assets/screen-ldpi-portrait.png" density="port-ldpi"/>
    <splash src="assets/screen-mdpi-portrait.png" density="port-mdpi"/>
    <splash src="assets/screen-xhdpi-portrait.png" density="port-xhdpi"/>
</platform>
    
    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Altair Labs 
    </author>

</widget>